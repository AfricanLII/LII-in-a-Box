function legislation_beginwith($current_path){

    //Code added for fixing the url-path
    $path_ar = explode('/',current_path());
    $legtype = $path_ar[1];
    $letter = strtoupper($path_ar[2]);

    if(strlen($letter) == 1){

        $legisname = db_query("SELECT name FROM {node_type} WHERE type = '$legtype' ")->fetchField();
        //$courtname = str_replace('-',' ',$passedcourtname);
        //$courtname = ucwords($courtname);
        drupal_set_title($legisname .' beginning with '.$letter);

        $queryres=db_query("SELECT nd.title, ualias.alias
        FROM {node} nd INNER JOIN {url_alias} ualias ON
        ualias.source = CONCAT('node/',nd.nid) 
        AND nd.title LIKE '$letter%'
        AND nd.type = '$legtype' ");


        $data = '<p><strong>type:</strong> judgment';
        $data .= '<p><strong>database:</strong> '.$legisname;
        $data .= '<p><strong>alpha:</strong> '.$letter;
        $data .= "<p><ul>";
        foreach($queryres as $result){
          $content_title = $result->title;
          $content_src = $result->alias;
          //$data .="<li><a href='$content_src'>$content_title</a></li>"; 
          $data .= t('<li><a href="@url">'.$content_title.'</a></li>', array('@url' => url($content_src)));
        }
        $data .= "</ul></p>";

        $content['content'] = array(
          '#markup'=>t($data),
        );
        return $content;
    }
    else if(strlen($letter) == 4){

        $path_ar = explode('/',$current_path);
       // print_r($path_ar);
        $legtype = $path_ar[1];
        $year = $path_ar[2];
        
        
        //$metadata = '<p><strong>type:</strong>Legislation';
        $metadata = '';
        //$metadata .= '<p><strong>database:</strong>'.$legtype;
        //$metadata .= '<p><strong>year:</strong>'.$year;

        $legname = db_query("SELECT name FROM {node_type} WHERE type = '$legtype' ")->fetchField();
        drupal_set_title($legname.' commenced year '.$year);

        if($legtype == "legislation_promulgated"){      

          
          $result = db_query("SELECT n.title,DATE_FORMAT(pdate.field_commencedate_value,'%Y'),ualias.alias FROM {node} n     
            INNER JOIN {field_data_field_commencedate} pdate
            ON n.nid = pdate.entity_id
            AND DATE_FORMAT(pdate.field_commencedate_value,'%Y') = '$year'
            INNER JOIN {url_alias} ualias
            ON CONCAT('node/',n.nid) = ualias.source
            ORDER BY n.title ");

          $date_month = array();
          

          $date_ar = array();  
          $titles = '<p><ul>';  
          $prev_month = "";
         
          foreach($result as $res){        
            $alias = $res->alias;
            $titles .= t('<li><a href="@url">'.$res->title.'</a></li>', array('@url' => url($alias)));       
          }// End of for loop
          
          $titles .= '</ul></p>';
          
          $content['content'] = array(
            '#markup'=>t($metadata.$titles),
          );
        }
        else if($legtype == "consolidated_legislation"){      
          
