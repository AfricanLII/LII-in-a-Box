function legislation_output() {

    $content = array();
    $path = current_path();
    $path_ar = explode('/',$path);
    $letter = $path_ar[2];
    $letter_size = strlen($letter);
//print_r($path_ar);
    //echo count($path_ar);
    if(count($path_ar) == 3 && ($letter_size !=1 && $letter_size !=4)){

      return _page_consol_leglist($path);
    }
    else{
      return legislation_beginwith($path);
    }
    
}


